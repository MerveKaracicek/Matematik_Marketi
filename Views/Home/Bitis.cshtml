@model Matematik_Marketi.Models.Entities.Game
@{
    Layout = "_Layout";
    ViewData["Title"] = "Bitiş Ekranı";
    ViewData["BodyClass"] = "page-bitis";

    string message = ViewBag.GameStatus?.ToString() == "Won"
    ? "TEBRİKLER OYUNU KAZANDINIZ!"
    : "OYUNU KAYBETTİNİZ!";
}
<div class="game-container">
    <div class="popup">
        <!-- Bu kısım backend'den gelecek -->
        <h2>@message</h2>

        <div class="btn-container">
            <button id="newGameBtn" class="btn" data-gameid="@Model.Id">YENİ OYUN</button>
            <button id="exitBtn" class="btn cikisBtn">ÇIKIŞ</button>
        </div>
    </div>
</div>