@model Matematik_Marketi.Models.Entities.ShoppingList
@{
    Layout = "_Layout";
    ViewData["Title"] = "Alışveriş Listesi";
    ViewData["BodyClass"] = "page-alisveris";
}
<!-- Oyun alanı -->
    <div class="game-container">
        <div class="popup">
            <h2>ALIŞVERİŞ LİSTESİ</h2>
            
            <ul class="shopping-list">
                @foreach (var item in Model.Items)
                {
                <li style="text-decoration:@(item.IsCollected ? "line-through" : "none"); opacity:@(item.IsCollected ? "0.5" : "1")">@item.Product.Name    
                </li>
               
                }
            </ul>
            <button class="btn" data-gameid="@Model.GameId" data-btn-type="alisveris-tamam">TAMAM</button>
        </div>
    </div>